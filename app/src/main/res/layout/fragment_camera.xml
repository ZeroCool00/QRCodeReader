<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <com.dlazaro66.qrcodereaderview.QRCodeReaderView
        android:id="@+id/qrdecoderview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.http5000.qrreader.android.helper.PointsOverlayView
        android:id="@+id/points_overlay_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:autoLink="all"
        android:background="#55000000"
        android:clickable="true"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="#ffffff"
        android:textSize="14sp" />



    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnSearchWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#55000000"
        android:drawableLeft="@drawable/ic_public_black_24dp"
        android:padding="10dp"
        android:text=" Search on web"
        android:textColor="#ffffff"
        android:visibility="gone"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnShareLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSearchWeb"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="#55000000"
        android:drawableLeft="@drawable/ic_share_black_24dp"
        android:padding="10dp"
        android:text=" Share Result"
        android:textColor="#ffffff"
        android:visibility="gone"
        />

    <CheckBox
        android:id="@+id/flashlight_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#99000000"
        android:checked="false"
        android:padding="16dp"
        android:text="On/Off flashlight"
        android:textColor="#ffffff"
        android:textSize="14sp" />


</RelativeLayout>